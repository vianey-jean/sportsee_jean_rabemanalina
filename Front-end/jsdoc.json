{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown", "better-docs/component"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "better-docs": {
      "name": "SportSee - My React components"
    }
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "verbose": true,
    "encoding":"utf8",
    "readme": "README.md",
    "template": "node_modules/docdash"
  }
}
